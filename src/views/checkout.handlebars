<h1 class="text-center mt-4">Finalizar Compra</h1>

<div class="checkout-details">
    <h2>Detalhes do Carrinho</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Produto</th>
                <th>Quantidade</th>
                <th>Preço Unitário</th>
                <th>Total</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each cartItems}}
                <tr>
                    <td>{{this.productId.title}}</td>
                    <td>{{this.quantity}}</td>
                    <td>R$ {{this.productId.price}}</td>
                    <td>R$ {{multiply this.productId.price this.quantity}}</td>
                    <td>
                        <form action="/api/carts/{{../cart._id}}/products/{{this.productId._id}}?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger btn-sm">Deletar</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <div class="total-value">
        <h3>Total: R$ {{totalPrice}}</h3>
    </div>

    <div>
        <form action="/finalize-payment/{{cartId}}" method="POST">
           <button type="submit" id="submit-btn" onclick="this.form.submit();">Finalizar Pagamento</button>
        </form>
    </div>
</div>