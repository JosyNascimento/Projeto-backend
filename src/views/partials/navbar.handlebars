<head>
    <style>
        body {
            margin: 0;
        }

        .navbar {
            background-color: #630d38;
            margin-top: 0%;
            padding: 1rem 0;
            box-shadow: 0 2px 4px rgba(250, 247, 247, 0.979);
            width: 100%;
            top: 0;
            position: sticky;
        }

        .container {
            width: 90%;
            max-width: 1200px;
            margin: 0 auto;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-family: Arial, Helvetica, sans-serif;
            font-size: 1.5rem;
            font-weight: bold;
            color: #fffefe;
            text-decoration: none;
        }

        .nav-links {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

        .nav-links li {
            margin-left: 1rem;
        }

        .nav-links a {
            font-family: Arial, Helvetica, sans-serif;
            text-decoration: none;
            color: #fffefe;
            padding: 0.5rem 1rem;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .nav-links a:hover {
            background-color: rgb(226, 154, 196);
        }
    </style>
</head>

<nav class="navbar">
    <div class="container">
        <a href="/" class="logo">Kibeleza</a>
        <ul class="nav-links">
            <li><a href="/products">Produtos</a></li>
            <li><a href="/cart">Carrinho</a></li>
            {{#if user}}
                <li><a href="/logout">Logout</a></li>
            {{else}}
                <li><a href="/login">Login</a></li>
                <li><a href="/register">Registrar</a></li>
            {{/if}}
        </ul>
    </div>
</nav>